<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        >
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/landingimg"
            android:src = "@drawable/landing" android:layout_below="@+id/welcometxt"
            android:onClick="startgame"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Welcome to The Tasting Room"
            android:id="@+id/welcometxt"
            android:textStyle="bold"
            android:textSize="32dp" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>


</RelativeLayout>