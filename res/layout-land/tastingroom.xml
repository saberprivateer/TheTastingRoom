<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="150dp"
                    android:background="@drawable/winebartop" android:id="@+id/relativeLayout">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" android:layout_alignParentStart="false"
                android:src="@drawable/whitewine" android:padding="0dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2" android:layout_centerVertical="true" android:layout_alignParentEnd="true"
                android:layout_marginRight="88dp" android:src="@drawable/whitewine"/>
    </RelativeLayout>
</LinearLayout>