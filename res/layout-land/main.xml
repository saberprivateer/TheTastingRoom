<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" android:background="@drawable/leftsidebackground">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/PlayerMoney"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:textColor="@android:color/white" android:background="@android:drawable/screen_background_dark_transparent"
                android:layout_alignParentStart="true" android:layout_alignParentEnd="true" android:gravity="center"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:id="@+id/progressBar"
                android:visibility="visible" android:progress="33" android:layout_below="@+id/textView"
                android:layout_alignParentStart="true" android:layout_marginLeft="46dp"
                android:layout_marginTop="87dp" android:background="@drawable/whitewine"
                android:progressDrawable="@drawable/swish1" android:secondaryProgress="55"/>
    </RelativeLayout>
</RelativeLayout>