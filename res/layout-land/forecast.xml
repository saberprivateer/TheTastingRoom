<?xml version="1.0" encoding="utf-8"?>
<merge>
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/llforecast" android:onClick="backtowine">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp" android:background="@drawable/spread">
            <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Check out the upcoming forecast for tourism!"
                    android:id="@+id/forecastinfo"
                    android:background="@android:drawable/screen_background_dark_transparent" android:textSize="20dp"
                    android:textStyle="italic"
                    android:textColor="#ffffffff" android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>
        </RelativeLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_gravity="left"
                    >
                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/forecastdirection"
                        android:src="@drawable/leftwood"
                        android:layout_gravity="right" android:contentDescription="SlideIndicator"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/Forecast2Stock"
                        android:id="@+id/gettocellar"

                        android:layout_gravity="center_vertical" android:textColor="@android:color/holo_orange_dark"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:baselineAligned="false">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_weight="1"
                        android:id="@+id/llseg1" android:background="@drawable/youngcouple">
                    <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                        <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/forecast1"
                                android:src="@drawable/wood_arrow_progressive"
                                android:layout_above="@+id/segment1name" android:layout_alignParentEnd="true"
                                android:background="@android:drawable/screen_background_dark_transparent"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Young Couple"
                                android:id="@+id/segment1name" android:textSize="12dp" android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:textIsSelectable="false" android:textColor="#ffffffff" android:autoText="false"
                                android:background="@android:drawable/screen_background_dark_transparent"
                                android:layout_alignParentBottom="true"/>
                        <ImageView
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:id="@+id/imageView2" android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true" android:background="@drawable/redoverwhite"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                              android:layout_height="fill_parent" android:layout_weight="1" android:id="@+id/llseg2"
                              android:background="@drawable/retiredcouple">
                    <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                        <ImageView android:layout_width="50dp" android:layout_height="50dp"
                                   android:id="@+id/forecast2" android:src="@drawable/wood_arrow_progressive"
                                   android:layout_above="@+id/segment2name" android:layout_alignParentEnd="true"
                                   android:background="@android:drawable/screen_background_dark_transparent"/>
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:text="Retired Couple"
                                  android:id="@+id/segment2name" android:textSize="12dp" android:layout_gravity="center_horizontal"
                                  android:gravity="center_horizontal"
                                  android:textColor="#ffffffff"
                                  android:background="@android:drawable/screen_background_dark_transparent"
                                  android:layout_alignParentBottom="true"/>
                        <ImageView
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:id="@+id/imageView" android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true" android:background="@drawable/redorwhite"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                              android:layout_height="fill_parent" android:layout_weight="1" android:id="@+id/llseg3"
                              android:background="@drawable/bachaloretteparty">
                    <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" android:background="@drawable/bachaloretteparty"
                            >
                        <ImageView android:layout_width="50dp" android:layout_height="50dp"
                                   android:id="@+id/forecast3" android:src="@drawable/wood_arrow_progressive"
                                   android:layout_above="@+id/segment3name" android:layout_alignParentEnd="true"
                                   android:background="@android:drawable/screen_background_dark_transparent"/>
                        <ImageView android:layout_width="40dp" android:layout_height="30dp"
                                   android:id="@+id/segment3wine1" android:background="@drawable/whiteoverred"
                                   android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
                                   android:layout_alignParentRight="true"/>
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:text="Bachelorette Party"
                                  android:id="@+id/segment3name" android:textSize="12dp" android:layout_gravity="center_horizontal"
                                  android:gravity="center_horizontal"
                                  android:textColor="#ffffffff"
                                  android:background="@android:drawable/screen_background_dark_transparent"
                                  android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </merge>