<?xml version="1.0" encoding="utf-8"?>
<merge>
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/llforecast" android:onClick="backtowine">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp" android:background="@drawable/spread">
            <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Check out the upcoming forecast for tourism!"
                    android:id="@+id/forecastinfo"
                    android:background="@android:drawable/screen_background_dark_transparent" android:textSize="20dp"
                    android:textStyle="italic"
                    android:textColor="#ffffffff" android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>
        </RelativeLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_gravity="left"
                    >
                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/forecastdirection"
                        android:src="@drawable/leftwood"
                        android:layout_gravity="right" android:contentDescription="SlideIndicator"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/Forecast2Stock"
                        android:id="@+id/gettocellar"

                        android:layout_gravity="center_vertical" android:textColor="@android:color/holo_orange_dark"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:baselineAligned="false">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_weight="1"
                        android:id="@+id/llseg1" android:background="@drawable/youngcouple">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp" android:layout_gravity="top" android:layout_weight="1"
                            android:baselineAligned="false">
                        <ImageView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/forecast1"
                                android:src="@drawable/wood_arrow_progressive" android:layout_marginBottom="40dp"/>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" android:layout_weight="1">
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:id="@+id/segment1wine1" android:src="@drawable/rightwood"/>
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:id="@+id/segment1wine2" android:src="@drawable/rightwood"/>
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:id="@+id/segment1wine3" android:src="@drawable/rightwood"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sample Text"
                            android:id="@+id/segment1name" android:textSize="12dp" android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal" android:layout_weight="0.09"
                            android:textIsSelectable="false" android:textColor="#ffffffff" android:autoText="false"
                            android:background="@android:drawable/screen_background_dark_transparent"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                              android:layout_height="fill_parent" android:layout_weight="1" android:id="@+id/llseg2"
                              android:background="@drawable/retiredcouple">
                    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                                  android:layout_height="0dp" android:layout_gravity="top" android:layout_weight="1"
                                  android:baselineAligned="false">
                        <ImageView android:layout_width="50dp" android:layout_height="wrap_content"
                                   android:id="@+id/forecast2" android:src="@drawable/wood_arrow_progressive"
                                   android:layout_marginBottom="40dp"/>
                        <LinearLayout android:orientation="vertical" android:layout_width="0dp"
                                      android:layout_height="wrap_content" android:layout_weight="1">
                            <ImageView android:layout_width="wrap_content" android:layout_height="40dp"
                                       android:id="@+id/segment2wine1" android:src="@drawable/rightwood"/>
                            <ImageView android:layout_width="wrap_content" android:layout_height="40dp"
                                       android:id="@+id/segmen2wine2" android:src="@drawable/rightwood"/>
                            <ImageView android:layout_width="wrap_content" android:layout_height="40dp"
                                       android:id="@+id/segment2wine2" android:src="@drawable/rightwood"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:text="Sample Text"
                              android:id="@+id/segment2name" android:textSize="12dp" android:layout_gravity="center_horizontal"
                              android:gravity="center_horizontal" android:layout_weight="0.09"
                              android:textColor="#ffffffff"
                              android:background="@android:drawable/screen_background_dark_transparent"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                              android:layout_height="fill_parent" android:layout_weight="1" android:id="@+id/llseg3"
                              android:background="@drawable/bachaloretteparty">
                    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                                  android:layout_height="0dp" android:layout_gravity="top" android:layout_weight="1"
                                  android:baselineAligned="false">
                        <ImageView android:layout_width="50dp" android:layout_height="wrap_content"
                                   android:id="@+id/forecast3" android:src="@drawable/wood_arrow_progressive"
                                   android:layout_marginBottom="40dp"/>
                        <LinearLayout android:orientation="vertical" android:layout_width="0dp"
                                      android:layout_height="wrap_content" android:layout_weight="1">
                            <ImageView android:layout_width="wrap_content" android:layout_height="40dp"
                                       android:id="@+id/segment3wine1" android:src="@drawable/rightwood"/>
                            <ImageView android:layout_width="wrap_content" android:layout_height="40dp"
                                       android:id="@+id/segment3wine2" android:src="@drawable/rightwood"/>
                            <ImageView android:layout_width="wrap_content" android:layout_height="40dp"
                                       android:id="@+id/segment3wine3" android:src="@drawable/rightwood"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:text="Sample Text"
                              android:id="@+id/segment3name" android:textSize="12dp" android:layout_gravity="center_horizontal"
                              android:gravity="center_horizontal" android:layout_weight="0.09"
                              android:textColor="#ffffffff"
                              android:background="@android:drawable/screen_background_dark_transparent"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </merge>