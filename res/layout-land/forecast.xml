<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewFlipper">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/llforecast">
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="150dp" android:background="@drawable/spread">
                <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Check out the upcoming forecast for tourism!"
                        android:id="@+id/forecastinfo"
                        android:layout_alignParentStart="true"
                        android:background="@android:drawable/screen_background_dark_transparent" android:textSize="20dp"
                        android:textStyle="italic" android:layout_marginTop="20dp" android:layout_marginLeft="18dp"/>
            </RelativeLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" android:layout_gravity="left"
                        >
                    <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/forecastdirection"
                            android:src="@drawable/leftwood"
                            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
                            android:layout_gravity="right"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Stock up on wine..."
                            android:id="@+id/gettocellar"
                            android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/imageView"
                            android:layout_gravity="center_vertical" android:textColor="@android:color/holo_orange_dark"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" android:layout_weight="1"
                            android:id="@+id/llseg1">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp" android:layout_gravity="top" android:layout_weight="1"
                                android:baselineAligned="false">
                            <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/forecast1"
                                    android:src="@drawable/wood_arrow_progressive" android:layout_marginBottom="40dp"/>
                            <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/segment1pic" android:src="@drawable/youngcouple"
                                    android:layout_gravity="top" android:layout_marginBottom="40dp"/>
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content" android:layout_weight="1">
                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:id="@+id/segment1wine1" android:src="@drawable/rightwood"/>
                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:id="@+id/segment1wine2" android:src="@drawable/rightwood"/>
                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:id="@+id/segment1wine3" android:src="@drawable/rightwood"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Sample Text"
                                android:id="@+id/segment1name" android:textSize="20dp" android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal" android:layout_weight="0.09"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                                  android:layout_height="fill_parent" android:layout_weight="1" android:id="@+id/llseg2">
                        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                                      android:layout_height="0dp" android:layout_gravity="top" android:layout_weight="1"
                                      android:baselineAligned="false">
                            <ImageView android:layout_width="50dp" android:layout_height="wrap_content"
                                       android:id="@+id/forecast2" android:src="@drawable/wood_arrow_progressive"
                                       android:layout_marginBottom="40dp"/>
                            <ImageView android:layout_width="100dp" android:layout_height="wrap_content"
                                       android:id="@+id/segment2pic" android:src="@drawable/youngcouple"
                                       android:layout_gravity="top" android:layout_marginBottom="40dp"/>
                            <LinearLayout android:orientation="vertical" android:layout_width="0dp"
                                          android:layout_height="wrap_content" android:layout_weight="1">
                                <ImageView android:layout_width="wrap_content" android:layout_height="40dp"
                                           android:id="@+id/segment2wine1" android:src="@drawable/rightwood"/>
                                <ImageView android:layout_width="wrap_content" android:layout_height="40dp"
                                           android:id="@+id/segmen2wine2" android:src="@drawable/rightwood"/>
                                <ImageView android:layout_width="wrap_content" android:layout_height="40dp"
                                           android:id="@+id/segment2wine2" android:src="@drawable/rightwood"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Sample Text"
                                  android:id="@+id/segment2name" android:textSize="20dp" android:layout_gravity="center_horizontal"
                                  android:gravity="center_horizontal" android:layout_weight="0.09"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                                  android:layout_height="fill_parent" android:layout_weight="1" android:id="@+id/llseg3">
                        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                                      android:layout_height="0dp" android:layout_gravity="top" android:layout_weight="1"
                                      android:baselineAligned="false">
                            <ImageView android:layout_width="50dp" android:layout_height="wrap_content"
                                       android:id="@+id/forecast3" android:src="@drawable/wood_arrow_progressive"
                                       android:layout_marginBottom="40dp"/>
                            <ImageView android:layout_width="100dp" android:layout_height="wrap_content"
                                       android:id="@+id/segment3pic" android:src="@drawable/youngcouple"
                                       android:layout_gravity="top" android:layout_marginBottom="40dp"/>
                            <LinearLayout android:orientation="vertical" android:layout_width="0dp"
                                          android:layout_height="wrap_content" android:layout_weight="1">
                                <ImageView android:layout_width="wrap_content" android:layout_height="40dp"
                                           android:id="@+id/segment3wine1" android:src="@drawable/rightwood"/>
                                <ImageView android:layout_width="wrap_content" android:layout_height="40dp"
                                           android:id="@+id/segment3wine2" android:src="@drawable/rightwood"/>
                                <ImageView android:layout_width="wrap_content" android:layout_height="40dp"
                                           android:id="@+id/segment3wine3" android:src="@drawable/rightwood"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Sample Text"
                                  android:id="@+id/segment3name" android:textSize="20dp" android:layout_gravity="center_horizontal"
                                  android:gravity="center_horizontal" android:layout_weight="0.09"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                      android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                android:id="@+id/llstockup">
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="150dp" android:background="@drawable/stockup">
                <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Stock up on bottles for the season!"
                        android:id="@+id/stockupinfo"
                        android:background="@android:drawable/screen_background_dark_transparent" android:textSize="24dp"
                        android:textStyle="italic" android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" android:layout_gravity="right" android:gravity="right">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Check the forecast..."
                            android:id="@+id/textView2"
                            android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/imageView"
                            android:layout_gravity="center_vertical" android:textColor="@android:color/holo_orange_dark"/>
                    <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/imageView"
                            android:src="@drawable/rightwood"
                            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
                            />
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent" android:gravity="center|top" android:layout_marginRight="10dp"
                            android:layout_weight="1" android:layout_gravity="top">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="$5"
                                android:id="@+id/textView5" android:gravity="top"
                                android:textSize="16dp" android:layout_marginBottom="8dp"/>
                        <ImageView
                                android:layout_width="100dp"
                                android:layout_height="90dp"
                                android:id="@+id/imageView2"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/cheapwhite"
                                android:baselineAlignBottom="false" android:background="@android:color/transparent"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Chardonnay"
                                android:id="@+id/textView3" android:textColor="#ff9c9c9c" android:textSize="12dp"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="0dp"
                                  android:layout_height="fill_parent" android:gravity="center|top" android:id="@+id/llsomewine"
                                  android:layout_marginRight="20dp" android:layout_weight="1">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="$10"
                                  android:id="@+id/textView4" android:layout_marginBottom="8dp" android:gravity="top"
                                  android:textSize="16dp"/>
                        <ImageView android:layout_width="100dp" android:layout_height="90dp"
                                   android:id="@+id/imageView3" android:src="@drawable/expensivewhite"
                                   android:layout_marginBottom="10dp"/>
                        <TextView android:layout_width="100dp" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Sauvignon Blanc"
                                  android:id="@+id/textView6" android:gravity="center_horizontal" android:textSize="12dp"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="0dp"
                                  android:layout_height="fill_parent" android:gravity="center|top" android:id="@+id/linearLayout2"
                                  android:layout_marginRight="20dp" android:layout_weight="1">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="$10"
                                  android:id="@+id/textView7" android:layout_marginBottom="8dp" android:gravity="top"
                                  android:textSize="16dp"/>
                        <ImageView android:layout_width="100dp" android:layout_height="90dp"
                                   android:id="@+id/imageView4" android:src="@drawable/cheapred"
                                   android:layout_marginBottom="10dp"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Merlot"
                                  android:id="@+id/textView8" android:textColor="@android:color/holo_red_light"
                                  android:textSize="12dp"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="0dp"
                                  android:layout_height="fill_parent" android:gravity="center|top" android:id="@+id/linearLayout3"
                                  android:layout_weight="1">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="$15"
                                  android:id="@+id/textView9" android:layout_marginBottom="8dp" android:textSize="16dp"/>
                        <ImageView android:layout_width="100dp" android:layout_height="90dp"
                                   android:id="@+id/imageView5" android:src="@drawable/expensivered"
                                   android:layout_marginBottom="10dp"/>
                        <TextView android:layout_width="100dp" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Cabernet Sauvignon"
                                  android:id="@+id/textView10" android:textColor="@android:color/holo_red_dark"
                                  android:gravity="center_horizontal" android:textSize="12dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ViewFlipper>
</LinearLayout>